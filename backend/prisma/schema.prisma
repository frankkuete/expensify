generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AssetDocument {
  id            String      @id @default(uuid()) @db.Uuid
  name          String      @db.VarChar(255)
  url           String      @db.VarChar(500)
  createdAt     DateTime    @default(now())
  objectId      String      @db.Uuid
  objectType    AssetType   // Using the existing AssetType enum
}


enum AssetType {/
  real_estate
  stock
  bond
  etf
  cash
  custom
}

model RealEstate {
  id              String           @id @default(uuid()) @db.Uuid
  clerkId         String
  name            String          @db.VarChar(255)
  description     String?
  value           Decimal         @db.Decimal(18, 2)
  currency        String          @default("USD") @db.VarChar(10)
  location        String          
  address         String          
  surface         Float           
  yearBuilt       Int?
  propertyType    PropertyType    @default(HOUSE)
  rooms           Int?
  bathrooms       Int?
  hasParking      Boolean?         @default(false)
  hasGarden       Boolean?         @default(false)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model Stock {
  id              String           @id @default(uuid()) @db.Uuid
  clerkId         String
  name            String          @db.VarChar(255)
  description     String?
  value           Decimal         @db.Decimal(18, 2)
  currency        String          @default("USD") @db.VarChar(10)
  ticker          String
  quantity        Decimal         @db.Decimal(18, 2)
  purchasePrice   Decimal         @db.Decimal(18, 2)
  exchange        String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}


enum PropertyType {
  HOUSE
  APARTMENT
  LAND
  COMMERCIAL
  OTHER
}



model Transaction {
  id              String              @id @default(uuid()) @db.Uuid
  userId          String              @db.Uuid
  type            TransactionType
  amount          Decimal             @db.Decimal(18, 2)
  currency        String              @default("USD") @db.VarChar(10)
  description     String?
  transactionDate DateTime            @db.Date
  createdAt       DateTime            @default(now())
  updatedAt       DateTime        @updatedAt
}

enum TransactionType {
  income
  expense
}

